        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_of_Life"
        mc:Ignorable="d"
        Title="Robert's Game of Life" Height="800" Width="1200" Topmost="True">
    <Canvas x:Name="mainCanvas" Background="Black" MouseLeftButtonDown="MainCanvas_MouseLeftButtonDown">
